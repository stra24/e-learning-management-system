<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.everrefine.elms.infrastructure.mapper.CourseMapper">
  <delete id="deleteCourseById">
    DELETE FROM courses
    WHERE
    id = #{id}
  </delete>

  <insert id="createCourse" parameterType="com.everrefine.elms.domain.model.course.CourseForCreateRequest">
    <!-- courseOrderが同じレコードのINSERTを防ぎ、順番待ちさせる。 -->
    WITH lock AS (
      SELECT pg_advisory_xact_lock(hashtext('courses_insert'))
    )
    INSERT INTO courses (
      id,
      course_order,
      thumbnail_url,
      title,
      description,
      created_at,
      updated_at
    )
    SELECT
      #{id},
      COALESCE(MAX(course_order), 0) + 1024,
      #{thumbnailUrl},
      #{title},
      #{description},
      #{createdAt},
      #{updatedAt}
    FROM
      courses;
  </insert>

  <select id="findCourseById" resultType="com.everrefine.elms.domain.model.course.Course">
    SELECT
    *
    FROM
    courses
    WHERE
    id = #{id}
  </select>

  <select id="findCourses" resultType="com.everrefine.elms.domain.model.course.Course">
    SELECT
    *
    FROM
    courses
    LIMIT #{pageSize} OFFSET #{offset}
  </select>

  <select id="countCourses" resultType="int">
    SELECT COUNT(*)
    FROM courses
  </select>

  <update
    id="updateCourse"
    parameterType="com.everrefine.elms.domain.model.course.CourseForUpdateRequest"
  >
    UPDATE
      courses
    SET
      title = #{title.value},
      course_order = #{courseOrder}
      description = #{description.value},
      thumbnail_url = #{thumbnailUrl},
      updated_at = now()
    WHERE
      id = #{id};
  </update>
</mapper>